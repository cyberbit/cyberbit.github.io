{% extends "default.twig" %}

{% block content %}
    <section class="page-header">
        <h1 class="no-margin"><img class="img-responsive" src="{{ baseUrl }}/img/iconbellinger.png"></h1>
        <h1 class="project-name">{{ author }}</h1>
        <h2 class="project-tagline">{{ tagline }}</h2>
    </section>
    <section class="main-content portfolio">
        <div class="inner">
            {% include "portfolio.twig" %}
        </div>
    </section>
    <section class="main-content footer">
        <div class="inner">
            <footer class="site-footer no-padding">
                <span class="site-footer-credits">Made with love by <a href="{{ authorLink }}">{{ author }}</a>.</span>
            </footer>
        </div>
    </section>
{% endblock %}